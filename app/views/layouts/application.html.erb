<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all' %>

  </head>

  <body>
  <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "View Cart", user_cart_path %></li>
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <%= current_user.email %> <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                  <li><%= link_to "Sign Out", signout_path, id: "sign_out" %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Sign In with Facebook", user_facebook_omniauth_authorize_path, id: "sign_in" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="ui container">
      <%= yield %>
    </div>
  </body>
</html>
